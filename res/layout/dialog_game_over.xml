<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:click="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="#FFD119"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
   tools:context="jakebarnby.click.GameActivity" >
   
	<jakebarnby.click.MyTextView
        android:background="@color/black"
        android:id="@+id/textView_dialogGOTitle"
        click:fontName="freescript.ttf"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" 
        android:textColor="@color/white"
        android:textSize="55sp"
        android:text="@string/dialog_gameOver"/> 
        
	<View android:background="#FFFFFF" 
        android:layout_width = "fill_parent" 
        android:layout_height="3dip" 
        android:layout_centerVertical ="true" 
        android:layout_above="@+id/textView_dialogGOInfo"/>
  
    <jakebarnby.click.MyTextView
        android:id="@+id/textView_dialogGOInfo"
        click:fontName="freescript.ttf"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_dialogGOTitle"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="35sp" />
    
    <View android:background="@color/white"
        android:layout_width = "fill_parent" 
        android:layout_height="3dip" 
        android:layout_centerVertical ="true" 
        android:layout_above="@+id/dialog_buttonBar"/>
    
    <LinearLayout
        android:id="@+id/dialog_buttonBar"
        android:background="@color/black"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_below="@+id/textView_dialogGOInfo"
    	android:divider="@drawable/divider"
    	android:dividerPadding="4dip"
   		style="?android:attr/buttonBarStyle" >
        
  	 	<Button
        	android:id="@+id/button_dialogGOBack"
        	android:layout_weight="0.5"
       		android:layout_width="0dp"
        	android:layout_height="wrap_content"
			android:text="@string/dialog_close"
			style="@style/btnStyleNew" />
    
   		<Button
        	android:id="@+id/button_dialogGORestart"
        	android:layout_weight="0.5"
       		android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:text="@string/dialog_newGame"
        	style="@style/btnStyleNew"  />
	</LinearLayout>
</RelativeLayout>

