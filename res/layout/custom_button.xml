<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#343333" />

            <gradient android:angle="-90" android:endColor="#333333" android:startColor="#111111" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#000000" />

            <solid android:color="#000002" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#000000" />

            <gradient android:angle="-90" android:endColor="#000002" android:startColor="#1d181f" />
        </shape></item>

</selector>