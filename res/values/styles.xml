<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.	-->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!-- Theme customizations related to backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Custom activity transition animation using fade in and out -->
    <style name="FadeDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <!-- Custom menu button style. -->
    <style name="clickMenuButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/button_menubutton_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@layout/click_menu_button</item>
        <item name="android:padding">10dip</item>
    </style>

</resources>